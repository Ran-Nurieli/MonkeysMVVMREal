<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MonkeysMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MonkeysMVVM.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MonkeysPage}"
        Route="MainPage" />

    <TabBar Shell.TabBarBackgroundColor="Green">
        <ShellContent
            ContentTemplate="{DataTemplate local:MonkeysPage}"
            Icon="home.png"
            Route="HomePage" />
        <Tab Icon="search.png">
            <ShellContent Title="סינון" ContentTemplate="{DataTemplate local:MonkeysPage}" />
        </Tab>

    </TabBar>
</Shell>
